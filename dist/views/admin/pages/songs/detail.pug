extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    +alert-error(3000)
    .container.mt-5
      .row
        .col-md-4
          img.img-fluid.rounded.shadow-sm#song-avatar(src=song.avatar alt=song.title)
        .col-md-8
          h1#song-title #{song.title}
          p.text-muted#song-description #{song.description}
          ul.list-group
            li.list-group-item.d-flex.justify-content-between.align-items-center
              | Singer: 
              span#song-singer #{song.singer}
            li.list-group-item.d-flex.justify-content-between.align-items-center
              | Topic: 
              span#song-topic #{song.topic}
            li.list-group-item.d-flex.justify-content-between.align-items-center
              | Likes: 
              span#song-like #{song.like}
            li.list-group-item.d-flex.justify-content-between.align-items-center
              | Listens: 
              span#song-listen #{song.listen}
            li.list-group-item.d-flex.justify-content-between.align-items-center
              | Status: 
              span#song-status #{song.status}

      .row.mt-4
        .col-12
          h2 Lyrics
          pre.bg-light.p-3.rounded#song-lyrics !{song.lyrics}

      .row.mt-4
        .col-12
          h2 Audio
          audio.w-100#song-audio(controls)
            source(src=song.audio type="audio/mpeg")
            | Your browser does not support the audio element.
        .row.mt-4
            .col-12
                a(
                    class="btn btn-warning"
                    href=`/${prefixAdmin}/songs/edit/${song.id}`
                ) Chỉnh sửa