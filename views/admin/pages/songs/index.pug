extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/pagination.pug
include ../../mixins/search.pug

block main
    +alert-success(3000)
    +alert-error(3000)
    h1(class="mb-4") #{pageTitle}


    .card.mb-3
        .card-header Danh sách
        .card-body
            .row
                .col-8
                    +search(keyword)
                .col-4.text-right.mb-2
                    a(
                        href=`/${prefixAdmin}/songs/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới


            table(
                class="table table-hover table-sm"
            )
                thead
                    tr
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        //- th Ca sĩ
                        //- th Chủ đề
                        //- th Vị trí
                        th Trạng thái
                        th Hành động
                tbody
                    each item, index in songs
                        tr 
                            td #{index+1}
                            td
                                img(
                                src=item.avatar
                                alt=item.title
                                width="80px"
                                height="auto"
                                )
                            td #{item.title}
                            //- td Dữ liệu ca sĩ
                            //- td Dữ liệu chủ đề
                            //- td Dữ liệu vị trí
                            td
                                if (item.status === "active")
                                    a(
                                        href="javascript:;"
                                        data-status=item.status
                                        data-id = item.id 
                                        button-change-status
                                        class="badge badge-success"
                                    ) Hoạt động
                                else
                                    a(
                                         href="javascript:;"
                                        data-status=item.status
                                        data-id = item.id 
                                        button-change-status
                                        class="badge badge-danger"
                                    ) Dừng hoạt động
                            td
                                a(
                                class="btn btn-secondary btn-sm"
                                href=`/${prefixAdmin}/songs/detail/${item.id}`
                                ) Chi tiết
                                a(
                                class="btn btn-warning btn-sm ml-1"
                                href=`/${prefixAdmin}/songs/edit/${item.id}`
                                ) Sửa
                                button(
                                    class="btn btn-danger btn-sm ml-1"
                                    button-delete
                                    data-id=item.id
                                ) Xóa
    +pagination(pagination)
    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`/${prefixAdmin}/songs/delete`
    )  
    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`/${prefixAdmin}/songs/change-status`
    )  
    block script 
        script(src="/admin/js/song.js") 